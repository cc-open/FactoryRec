<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/result_title_left"
        android:layout_marginTop="@dimen/result_title_top"
        android:text="@string/page_result"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/result_et"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/result_title_left"
        android:layout_marginRight="@dimen/result_title_left"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/black"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="请输入结论..."/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_light"
        android:layout_marginLeft="@dimen/distance_to_screen"
        android:layout_marginRight="@dimen/distance_to_screen" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_to_screen"
        android:layout_marginRight="@dimen/distance_to_screen"
        android:layout_marginTop="@dimen/size_40dp"
        android:id="@+id/addexcel"
        android:text="EXCEL"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_to_screen"
        android:layout_marginRight="@dimen/distance_to_screen"
        android:id="@+id/addpdf"
        android:text="PDF"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_to_screen_logo"
        android:layout_marginRight="@dimen/distance_to_screen"
        android:id="@+id/showlogo"
        android:visibility="gone"
        android:text="是否添加logo"/>

    <LinearLayout
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/result_title_left"
        android:layout_marginRight="@dimen/result_title_left"
        android:layout_marginBottom="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_40dp">

        <include layout="@layout/button_layout_next"/>
    </LinearLayout>

</LinearLayout>