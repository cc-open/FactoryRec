<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logo_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/transparent_black_30">

        <TextView
            android:id="@+id/logo_list_delete_text"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:clickable="true"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/confirm_button" />

        <TextView
            android:id="@+id/logo_list_add_text"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:clickable="true"
            android:gravity="center"
            android:text="添加"
            android:textColor="@color/confirm_button" />
    </LinearLayout>

    <ListView
        android:id="@+id/logo_image_view"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@color/menu_bg_end"
        android:listSelector="@color/blue_normal"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/transparent_black_30">

        <TextView
            android:id="@+id/logo_list_cancel_text"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/confirm_button" />

        <TextView
            android:id="@+id/logo_list_confirm_text"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/confirm_button" />
    </LinearLayout>
</LinearLayout>
